\NeedsTeXFormat{LaTeX2e}[2005/12/01]
\ProvidesPackage{beamercolorthemeilr}
    [2021/03/15 v0.1.1 A ilr colour theme for Beamer presentations]
  \RequirePackage{etoolbox}
  
     
  
  
\definecolor{ilrfg}      {RGB} {40,   42,   54}
\definecolor{ilrcl}      {RGB} {68,   71,   90}
\definecolor{ilrbg}      {RGB} {255, 255, 255}
\definecolor{ilrcomment} {RGB} {98,   114,  164}
\definecolor{ilrcyan}    {RGB} {52, 101, 164}
\definecolor{ilrgreen}   {RGB} {80,   250,  123}
\definecolor{ilrorange}  {RGB} {255,  184,  108}
\definecolor{ilrpink}    {RGB} {255,  121,  198}
\definecolor{ilrpurple}  {RGB} {189,  147,  249}
\definecolor{ilrred}     {RGB} {255,  85,   85}
\definecolor{ilryellow}  {RGB} {255, 192, 0}


  \setbeamercolor{normal text}{fg=ilrfg, bg=ilrbg}

  \colorlet{ilrbrown}{ilrred!50!ilrgreen}
  \colorlet{red}{ilrred}
  \colorlet{green}{ilrgreen}
  \colorlet{blue}{ilrcyan}
  \colorlet{yellow}{ilryellow}
  \colorlet{violet}{ilrred}
  \colorlet{brown}{ilrorange}
  \colorlet{orange}{ilrorange}
  \colorlet{cyan}{ilrcyan}
  \@ifclassloaded{beamer}{
    

    \setbeamercolor*{alerted text}{
      fg=ilryellow
    }
    \setbeamercolor{section in toc}{
    fg=ilrfg
    } % TOC sections
    \setbeamercolor{subsection in toc}{
    fg=blue!90!normal text.bg,
    } 
    \setbeamercolor*{example text}{
      fg=ilrfg
    }
    
    \setbeamercolor*{title}{
    bg= blue!80,
    fg=ilrbg
    }

    \setbeamercolor{background canvas}{bg=ilrbg}
    \setbeamercolor*{item}{
    fg=blue!90!normal text.bg, bg=ilrbg
    }
    \setbeamercolor{itemize/enumerate body}{
    fg=ilrfg
    }
    
    \setbeamercolor*{title in sidebar}{
      use=normal text,
      fg=normal text.fg
    }
    \setbeamercolor*{titlelike}{
      use=normal text,
      parent=normal text.fg
    }
    \setbeamercolor*{author}{
      use=normal text,
      parent=normal text.fg,
      fg= ilrfg
    }
    \setbeamercolor*{date}{
      use=normal text,
      parent=normal text.fg,
      fg= ilrfg
    }
    \setbeamercolor*{institute}{
      use=normal text,
      parent=normal text.fg,
      fg= ilrfg
    }
    \setbeamercolor*{structure}{
      use=normal text,
      fg=ilrcyan,
      bg=ilrbg
    }
    \setbeamercolor*{palette primary}{
      use=normal text,
      fg=ilrfg!99!normal text.bg,
      bg= ilrbg!95!normal text.fg
    }
    \setbeamercolor*{palette secondary}{
      use=normal text,
      fg=ilrbg,
      bg=ilrcyan
    }
    \setbeamercolor*{palette tertiary}{
      use=normal text,
      fg=ilrbg,
      bg=ilryellow
      %bg=normal text.bg!90!normal text.fg
    }
    \setbeamercolor*{palette quaternary}{
      use=normal text,
      fg=ilrcyan!90!normal text.bg,
      bg=normal text.bg!90!normal text.fg
    }
    \setbeamercolor*{sidebar}{
      use=normal text,
      fg=normal text.fg!95!normal text.bg,
      bg=normal text.bg!95!normal text.fg
    }
    \setbeamercolor*{palette sidebar primary}{
      use=palette primary,
      parent=palette primary
    }
    \setbeamercolor*{palette sidebar secondary}{
      use=palette primary,
      parent=palette primary
    }
    \setbeamercolor*{palette sidebar tertiary}{
      use=palette quaternary,
      parent=palette quaternary
    }
    \setbeamercolor*{palette sidebar quaternary}{
      use=palette quaternary,
      parent=palette quaternary
    }
    \setbeamercolor*{frametitle}{
      use=palette primary,
      parent=palette primary
    }
    \setbeamercolor*{block title}{
      use=normal text,
      fg=normal text.fg,
      bg=
    }
    \setbeamercolor{block body}{
      bg=
    }
    \setbeamercolor*{block alerted}{%
        use={block title, alerted text},
        fg=alerted text.fg,
        bg=block title.bg
    }
    \setbeamercolor*{block title example}{%
        use={block title, example text},
        fg=example text.fg,
        bg=block title.bg
    }
    \setbeamercolor*{block body alerted}{
      use=block body,
      parent=block body
    }
    \setbeamercolor*{block body example}{
      use=block body,
      parent=block body
    }
    \def\beamer@themerounded@shadow{false}
    \setbeamertemplate{navigation symbols}{}
  }{}
